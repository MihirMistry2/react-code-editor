{
    "compilerOptions": {
        /* Target & runtime */
        "target": "ES2020",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "jsx": "react-jsx",

        /* Resolution */
        "moduleResolution": "bundler",
        "resolveJsonModule": true,

        /* Library output */
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "noEmit": false,

        /* Type safety */
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,

        /* Lint-style checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },

    "include": ["src"],
    "exclude": ["dist", "node_modules"]
}
